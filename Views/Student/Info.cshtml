@model MvcAdoDemo.Models.User

@{
    ViewData["Title"] = "Student Info";
}

<h2>Student Information</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}
else if (Model != null)
{
    <table class="table">
        <tr>
            <th>Username</th>
            <td>@Model.Username</td>
        </tr>
        <tr>
            <th>Student ID</th>
            <td>@Model.StudentId</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <th>Gender</th>
            <td>@Model.Gender</td>
        </tr>
        <tr>
            <th>City</th>
            <td>@Model.City</td>
        </tr>
        <tr>
            <th>Role</th>
            <td>@Model.Role</td>
        </tr>


    </table>
}
else
{
    <div class="alert alert-warning">Dữ liệu sinh viên không khả dụng.</div>
}
 <a href="@Url.Action("Index", "Student")">Back</a>